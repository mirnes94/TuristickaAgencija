@model TuristickaAgencija.ViewModel.KlijentUplateVM
@{
    Layout = "_LayoutUser";
}

@if (!Model.listaUplata.Any())
{
    <div class="alert alert-info clearfix">
        <span>Nema uplata za prikaz.</span>
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>

                <th>Putovanje</th>
                <th>Datum</th>
                <th>Iznos uplate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.listaUplata)
            {
                <tr>

                    <td>@x.Putovanje</td>
                    <td>@x.DatumUplate</td>
                    <td>@x.IznosUplate</td>
                </tr>
            }
        <tr>
          <td><h4>Ukupno:</h4></td>
           <td></td>
           <td><b>@Model.Ukupno</b></td>
        </tr>
        </tbody>

    </table>
    
   
}


