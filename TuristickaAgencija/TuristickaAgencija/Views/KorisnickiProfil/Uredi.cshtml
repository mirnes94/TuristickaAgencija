@model TuristickaAgencija.ViewModel.KorisnickiProfilUrediVM

@{
    ViewData["Title"] = "Uredi";
}



<br />
<br />


<form action="/KorisnickiProfil/Snimi" method="post">
    @Html.HiddenFor(s => s.ProfilId)


    <h4>Pristupni podaci:</h4>


    <div class="form-group">
        <label>Korisničko ime:</label>
        @Html.TextBoxFor(s => s.KorisnickoIme, new { @class = "form-control" })
        <span asp-validation-for="KorisnickoIme" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label>Lozinka:</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>

    <h4>Kontakt podaci:</h4>


    <div class="form-group">
        <label>Mobitel/Email:</label>
        @Html.TextBoxFor(s => s.Kontakt, new { @class = "form-control" })
    </div>

    <br />

    @*<h4>Grad: </h4>
    <div class="form-group">
        <label>Grad</label>
        <select asp-for="GradID" asp-items="@Model.Grad" class="form-control"></select>
        <span asp-validation-for="GradID" class="text-danger"></span>

    </div>*@

    <input type="submit" value="Snimi" class="btn btn-info" />
</form>




