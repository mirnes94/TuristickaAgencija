@model TuristickaAgencija.ViewModel.KorisnickiProfilUrediVM

@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Uredi";
}

<h2>Uredi profil</h2>
<form asp-action="KlijentSnimi" asp-controller="KorisnickiProfil" method="post">
    @Html.HiddenFor(s => s.ProfilId)

    <h4>Lični podaci</h4>
        <div class="form-group">
        <label>Ime:</label>
        @Html.TextBoxFor(s => s.Ime, new { @class = "form-control" })
        <span asp-validation-for="Ime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Prezime:</label>
            @Html.TextBoxFor(s => s.Prezime, new { @class = "form-control" })
            <span asp-validation-for="Prezime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>JMBG:</label>
            @Html.TextBoxFor(s => s.JMBG, new { @class = "form-control" })
            <span asp-validation-for="JMBG" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Datum rodjenja:</label>
            @Html.TextBoxFor(s => s.DatumRodjenja, new { @class = "form-control" })
            <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GradId">Grad:</label>
            <select asp-for="GradId" asp-items="Model.Gradovi" class="form-control"></select>
            <span asp-validation-for="GradId" class="text-danger"></span>
        </div>
        <h4>Pristupni podaci:</h4>

        <div class="form-group">
            <label>Korisničko ime:</label>
            @Html.TextBoxFor(s => s.KorisnickoIme, new { @class = "form-control" })
            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Lozinka:</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <h4>Kontakt podaci:</h4>

        <div class="form-group">
            <label>Mobitel/Email:</label>
            @Html.TextBoxFor(s => s.Kontakt, new { @class = "form-control" })
        </div>

        <br />

        <input type="submit" value="Snimi" class="btn btn-info" />
</form>
