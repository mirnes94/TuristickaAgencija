@model List<TuristickaAgencija.ViewModel.PrevozPrikaziVM>


@{

}

<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>
@if (!Model.Any())
{
    <div class="alert alert-info clearfix">
        <span>Nema prevoza za prikaz.</span>

        <a asp-controller="Prevoz" asp-action="Dodaj" class="btn btn-info btn-xs float-right">Dodaj</a>
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Firma</th>
                <th>Tip prevoza</th>
                <th>Broj mjesta</th>
                <th>Cijena po mjesta</th>
                <th class="text-right">
                    <a asp-controller="Prevoz" asp-action="Dodaj" class="btn btn-info btn-sm">Dodaj</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Firma</td>
                <td>@x.TipPrevoza</td>
                <td>@x.BrojMjesta</td>
                <td>@x.CijenaPoMjestu</td>
                <td class="text-right">
                    <a asp-controller="Prevoz" asp-action="Uredi" asp-route-id="@x.Id" class="btn btn-info btn-sm">Uredi</a>
                    <a asp-controller="Prevoz" asp-action="Obrisi" asp-route-id="@x.Id" class="btn btn-danger btn-sm">Obriši</a>
                </td>
            </tr>
            }

        </tbody>

    </table>


}