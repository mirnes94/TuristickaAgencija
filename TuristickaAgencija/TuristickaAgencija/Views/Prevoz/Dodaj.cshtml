@model TuristickaAgencija.ViewModel.PrevozDodajUrediVM
@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Dodavanje prevoza";
    }
    else
    {
        ViewData["Title"] = "Uređivanje prevoza";
    }
}


<h3>@ViewData["Title"]</h3>
<hr />
<form asp-controller="Prevoz" asp-action="Snimi">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="FirmaID">Firma</label>
        <select asp-for="FirmaID" class="form-control" asp-items="@Model.Firma"></select>
        <span asp-validation-for="FirmaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipPrevoza">Tip prevoza</label>
        <input asp-for="TipPrevoza" type="text" class="form-control">
        <span asp-validation-for="TipPrevoza" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BrojMjesta">Broj mjesta</label>
        <input asp-for="BrojMjesta" class="form-control">
        <span asp-validation-for="BrojMjesta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CijenaPoMjestu">Cijena po mjestu</label>
        <input asp-for="CijenaPoMjestu" class="form-control">
        <span asp-validation-for="CijenaPoMjestu" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi</button>
</form>
