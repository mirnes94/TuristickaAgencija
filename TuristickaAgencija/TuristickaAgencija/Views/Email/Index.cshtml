@model TuristickaAgencija.ViewModel.PosaljiEmailVM;

@{
    var error = ViewData["error"];
    Layout = "_LayoutUser";
}

@if(error!=null)
{
    <h3 style="color:red;font-style:italic">Error network credential!!!</h3>
   <a asp-controller = "Email" asp-action = "Index" class="btn btn-info btn-sm">Back</a>
}
else
{
<form asp-controller="Email" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="From">Pošiljalac poruke</label>
        @if (Model.From != null)
        {
            <input asp-for="From" type="text" class="form-control" readonly />
        }
        else
        {
            <input asp-for="From" type="email" class="form-control" />
            <span asp-validation-for="From" class="text-danger"></span>
        }

    </div>
    <div class="form-group">
        <label asp-for="Password">Lozinka</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To">Primalac poruke</label>
        <input asp-for="To" type="text" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Subject">Predmet</label>
        <input asp-for="Subject" type="text" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body">Sadržaj poruke</label>
        @Html.TextAreaFor(m => m.Body, new { rows = "5", cols = "20", @class = "form-control" })
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Posalji email" class="btn btn-default" />
        </div>
    </div>
</form>
}

