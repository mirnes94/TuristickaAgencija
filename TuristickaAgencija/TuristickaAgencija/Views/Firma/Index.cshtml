@model List<TuristickaAgencija.ViewModel.FirmaPrikaziVM>


@{
  
}

<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>
@if (!Model.Any())
{
    <div class="alert alert-info clearfix">
        <span>Nema firmi za prikaz.</span>

        <a asp-controller="Firma" asp-action="Dodaj" class="btn btn-info btn-xs float-right">Dodaj</a>
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Grad</th>
                <th>Adresa</th>
                <th>Broj ziroracuna</th>
                <th class="text-right">
                    <a asp-controller="Firma" asp-action="Dodaj" class="btn btn-info btn-sm">Dodaj</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Naziv</td>
                <td>@x.Grad</td>
                <td>@x.Adresa</td>
                <td>@x.BrojZiroracuna</td>
                <td class="text-right">
                    <a asp-controller="Firma" asp-action="Uredi" asp-route-id="@x.Id" class="btn btn-info btn-sm">Uredi</a>
                    <a asp-controller="Firma" asp-action="Obrisi" asp-route-id="@x.Id" class="btn btn-danger btn-sm">Obriši</a>
                </td>
            </tr>
            }

        </tbody>

    </table>


}
